doctype html
html(lang="ko")
    head
        title #{pageTitle} | Btube
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
    body 
        header 
            if mockUser.loggedIn 
                small Hello #{mockUser.username}
            nav 
                ul 
                    if mockUser.loggedIn
                        li 
                            a(href="/login") Log out
                    else 
                        li 
                            a(href="/login") Login
            h1=pageTitle
        main 
            block content
    include partials/footer.pug